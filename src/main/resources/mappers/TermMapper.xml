<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mintae.dating.mapper.TermMapper">

    <select id="getTerms" resultType="com.mintae.dating.vo.Term">
        SELECT * FROM term
    </select>

    <insert id="insertTerm">
        insert into term(name, content, type, status)
        values(#{name}, #{content}, #{type}, #{status})
    </insert>

    <update id="updateTerm">
        update term set
        name = #{name},
        content = #{content},
        type = #{type},
        status = #{status}

        where id = #{id}
    </update>

    <delete id="deleteTerm">
        DELETE FROM term
        WHERE id = #{id}
    </delete>



</mapper>